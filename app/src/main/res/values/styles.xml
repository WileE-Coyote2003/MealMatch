<resources>

    <style name="BottomRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>
    <style name="TopRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="browseBN">
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">BROWSE BY NAME</item>

    </style>
    <style name="AlphaFilterItem">
        <!-- keep compact look but meet accessibility touch target -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <!-- clickable like a link -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <!-- padding keeps it feeling like text, but still large hit area -->
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <!-- âœ… contrast-friendly orange (slightly darker than #FF6900) -->
        <item name="android:textColor">@color/gray_400</item>
        <item name="android:textSize">14sp</item>
    </style>

