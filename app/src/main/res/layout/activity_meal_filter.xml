                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_norway"
                    android:text="Norwegian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_portugal"
                    android:text="Portuguese"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_russia"
                    android:text="Russian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_argentina"
                    android:text="Argentinian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_spain"
                    android:text="Spanish"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_slovakia"
                    android:text="Slovakian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_thailand"
                    android:text="Thai"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_saudi"
                    android:text="Saudi Arabian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_vietnam"
                    android:text="Vietnamese"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_turkey"
                    android:text="Turkish"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_syria"
                    android:text="Syrian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_algeria"
                    android:text="Algerian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_tunisia"
                    android:text="Tunisian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_poland"
                    android:text="Polish"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_philippines"
                    android:text="Filipino"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_ukraine"
                    android:text="Ukrainian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_uruguay"
                    android:text="Uruguayan"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_australia"
                    android:text="Australian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_kenya"
                    android:text="Kenyan"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_venezuela"
                    android:text="Venezulan"/>

            </com.google.android.material.chip.ChipGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>