<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MealFilter">

    <!-- HEADER (fixed) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/filter_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Recipes"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/culinary_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fine-tune your culinary search"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- FOOTER (sticky) -->
    <LinearLayout
        android:id="@+id/footer_filter_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_clear_all"
            android:text="Clear all"
            style="@style/clear_all_btn"
            />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_show_results"
            android:text="Show Results"
            style="@style/show_result_btn"
            />
    </LinearLayout>

    <!-- SCROLLABLE MIDDLE -->
    <ScrollView
        android:id="@+id/scroll_filters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer_filter_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ScrollView MUST have only ONE child -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CATEGORIES title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CATEGORIES"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_category_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 selected"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- TODO: Put your chips / flexbox / recycler here -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:selectionRequired="false"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp">
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_beef"
                    android:text="Beef"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_chicken"
                    android:text="Chicken"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_dessert"
                    android:text="Dessert"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_lamb"
                    android:text="Lamb"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_miscellaneous"
                    android:text="Miscellaneous"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_pasta"
                    android:text="Pasta"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_pork"
                    android:text="Pork"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_seafood"
                    android:text="Seafood"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_side"
                    android:text="Side"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_starter"
                    android:text="Starter"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_vegan"
                    android:text="Vegan"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_vegetarian"
                    android:text="Vegetarian"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_breakfast"
                    android:text="Breakfast"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/c_goat"
                    android:text="Goat"/>

            </com.google.android.material.chip.ChipGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- AREA/ORIGIN title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AREA / ORIGIN"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_area_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 selected"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- TODO: Put your chips / flexbox / recycler here -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:selectionRequired="false"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp">
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_uk"
                    android:text="United Kingdom"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_us"
                    android:text="United State"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_france"
                    android:text="France"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_canada"
                    android:text="Canada"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_jamaica"
                    android:text="Jamaica"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_china"
                    android:text="China"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_netherlands"
                    android:text="Netherlands"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_egypt"
                    android:text="Egypt"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_greece"
                    android:text="Greece"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_india"
                    android:text="India"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_ireland"
                    android:text="Ireland"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_italy"
                    android:text="Italy"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_japan"
                    android:text="Japan"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_skn"
                    android:text="Saint Kitts and Nevis"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_malaysia"
                    android:text="Malaysia"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_mexico"
                    android:text="Mexico"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_morocco"
                    android:text="Morocco"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_croatia"
                    android:text="Croatia"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_norway"
                    android:text="Norway"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_portugal"
                    android:text="Portugal"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_russia"
                    android:text="Russia"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_argentina"
                    android:text="Argentina"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_spain"
                    android:text="Spain"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_slovakia"
                    android:text="Slovakia"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_thailand"
                    android:text="Thailand"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_saudi"
                    android:text="Saudi Arabia"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_vietnam"
                    android:text="Vietnam"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_turkey"
                    android:text="Turkey"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_syria"
                    android:text="Syria"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_algeria"
                    android:text="Algeria"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_tunisia"
                    android:text="Tunisia"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_poland"
                    android:text="Poland"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_philippines"
                    android:text="Philippines"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_ukraine"
                    android:text="Ukraine"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_uruguay"
                    android:text="Uruguay"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_australia"
                    android:text="Australia"/>
                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_venezuela"
                    android:text="Venezuela"/>
            </com.google.android.material.chip.ChipGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>