<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- HEADER (fixed) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/filter_recipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Filter Recipes"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnClose"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/culinary_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fine-tune your culinary search"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnClose"
            app:layout_constraintTop_toBottomOf="@id/filter_recipe"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- âœ• Close Button -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- FOOTER (sticky) -->
    <LinearLayout
        android:id="@+id/footer_filter_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_clear_all"
            android:text="Clear all"
            style="@style/clear_all_btn" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_show_results"
            android:text="Show Results"
            style="@style/show_result_btn" />
    </LinearLayout>

    <!-- SCROLLABLE MIDDLE -->
    <ScrollView
        android:id="@+id/scroll_filters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer_filter_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CATEGORIES title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CATEGORIES"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_category_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 selected"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:selectionRequired="false"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_beef"
                    style="@style/chips_group"
                    android:text="Beef" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_chicken"
                    style="@style/chips_group"
                    android:text="Chicken" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_dessert"
                    style="@style/chips_group"
                    android:text="Dessert" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_lamb"
                    style="@style/chips_group"
                    android:text="Lamb" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_miscellaneous"
                    style="@style/chips_group"
                    android:text="Miscellaneous" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_pasta"
                    style="@style/chips_group"
                    android:text="Pasta" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_pork"
                    style="@style/chips_group"
                    android:text="Pork" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_seafood"
                    style="@style/chips_group"
                    android:text="Seafood" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_side"
                    style="@style/chips_group"
                    android:text="Side" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_starter"
                    style="@style/chips_group"
                    android:text="Starter" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_vegan"
                    style="@style/chips_group"
                    android:text="Vegan" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_vegetarian"
                    style="@style/chips_group"
                    android:text="Vegetarian" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_breakfast"
                    style="@style/chips_group"
                    android:text="Breakfast" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/c_goat"
                    style="@style/chips_group"
                    android:text="Goat" />

            </com.google.android.material.chip.ChipGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- AREA/ORIGIN title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AREA / ORIGIN"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_area_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 selected"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:selectionRequired="false"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="10dp">

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_uk"
                    android:text="British"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_us"
                    android:text="American"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_france"
                    android:text="French"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_canada"
                    android:text="Canadian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_jamaica"
                    android:text="Jamaican"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_china"
                    android:text="Chinese"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_netherlands"
                    android:text="Dutch"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_egypt"
                    android:text="Egyptian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_greece"
                    android:text="Greek"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_india"
                    android:text="Indian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_ireland"
                    android:text="Irish"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_italy"
                    android:text="Italian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_japan"
                    android:text="Japanese"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_malaysia"
                    android:text="Malaysian"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_mexico"
                    android:text="Mexican"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
                    android:id="@+id/a_morocco"
                    android:text="Moroccan"/>

                <com.google.android.material.button.MaterialButton
                    style="@style/chips_group"
