<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <solid android:color="@android:color/white" />

    <!-- 2dp border -->
    <stroke
        android:width="1dp"
        android:color="#FF6F08" />  <!-- your orange -->

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Inner padding -->
